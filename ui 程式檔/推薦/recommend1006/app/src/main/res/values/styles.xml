<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="btn_detailed" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_white_mood</item>
        <item name="android:paddingRight">-35dp</item>
        <item name="android:drawableRight">@mipmap/btn_detailed_foreground</item>
    </style>
    <style name="btn_navigation" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_white_mood</item>
        <item name="android:paddingRight">-35dp</item>
        <item name="android:drawableRight">@mipmap/btn_navigation_foreground</item>
    </style>

    <style name="PlaceNameInfoOverlayText">
        <item name="android:maxLines">6</item>
        <item name="android:paddingLeft">1sp</item>
        <item name="android:paddingBottom">1sp</item>
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>
