

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape android:shape="oval">

        <size
            android:width="10dp"
            android:height="10dp" />

    </shape></item>



    <item android:state_enabled="false"><shape android:shape="oval">
        <solid android:color="#ffff" />
        <stroke android:width="1dp" android:color="#ffff" />
        <size
            android:width="10dp"
            android:height="10dp" />


    </shape></item>



    <item><shape android:shape="oval">



        <padding android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp"
            />

        <size
            android:width="10dp"
            android:height="10dp" />

    </shape></item>



</selector>